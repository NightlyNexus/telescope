<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="TelescopeLayout">
    <attr name="pointerCount" format="integer"/>
    <attr name="progressColor" format="color"/>
    <attr name="screenshot" format="boolean"/>
    <attr name="screenshotChildrenOnly" format="boolean"/>
    <attr name="vibrate" format="boolean"/>
  </declare-styleable>
  
  <style name="TelescopeLayoutDefault">
    <item name="pointerCount">2</item>
    <item name="progressColor">#FF33b5e5</item>
    <item name="screenshot">true</item>
    <item name="screenshotChildrenOnly">false</item>
    <item name="vibrate">true</item>
  </style>

  <public name="pointerCount" type="attr"/>
  <public name="progressColor" type="attr"/>
  <public name="screenshot" type="attr"/>
  <public name="screenshotChildrenOnly" type="attr"/>
  <public name="vibrate" type="attr"/>
</resources>
